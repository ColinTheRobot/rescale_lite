<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Ingredients" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Ingredients</h1>
    <%= render ButtonComponent.new(label: "New Ingredient", url: new_ingredient_path) if get_current_user.is_brand? %>
  </div>

  <div id="ingredients" class="min-w-full">
    <% @ingredients.each do |ingredient| %>
      <%= render ingredient %>
    <% end %>
  </div>
</div>
